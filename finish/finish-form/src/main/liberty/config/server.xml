<!-- tag::security[] -->
<server description="Sample Servlet server">
    <featureManager>
        <feature>servlet-4.0</feature>
        <feature>appSecurity-3.0</feature>
    </featureManager>

    <httpEndpoint httpPort="${default.http.port}" httpsPort="${default.https.port}" id="defaultHttpEndpoint"  host="*" />
            <basicRegistry id="basic" realm="myRealm">
     <user name="bob" password="bobpwd" />  <!-- bobpwd -->
     <user name="alice" password="{xor}PjM2PDovKDs=" />  <!-- alicepwd -->

     <group name="admin">
         <member name="bob" />
     </group>

     <group name="user">
         <member name="bob" />
         <member name="alice" />
     </group>
 </basicRegistry>

    <webApplication location="ServletSample.war" contextRoot="${app.context.root}" />
</server>
<!-- end::security[] -->
